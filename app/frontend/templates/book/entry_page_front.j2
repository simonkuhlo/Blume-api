<div class="front" data-entry_id="{{ entry.id }}" id="e{{ entry.id }}f">
    {% if entry != None %}
    <div class="box-v entry-container">
        {% if entry.answers != None%}
            {% with answer = entry.answers[0] %}
                {% include "book/elements/answer_viewer.j2" %}
            {% endwith %}
            {% if entry.answers | length > 1 %}
            {% with answer = entry.answers[1] %}
                {% include "book/elements/answer_viewer.j2" %}
            {% endwith %}
            {% endif %}
            {% if entry.answers | length > 2 %}
            {% with answer = entry.answers[2] %}
                {% include "book/elements/answer_viewer.j2" %}
            {% endwith %}
            {% endif %}
            {% if entry.answers | length > 3 %}
            {% with answer = entry.answers[3] %}
                {% include "book/elements/answer_viewer.j2" %}
            {% endwith %}
            {% endif %}
            {% if entry.answers | length > 4 %}
            {% with answer = entry.answers[4] %}
                {% include "book/elements/answer_viewer.j2" %}
            {% endwith %}
            {% endif %}
        {% endif %}
        <div class="box-h control-element">
            <div class="spacer-h"></div>
            <button hx-get="/book/entry/{{ entry.id }}/next" hx-target="#page-root">Next</button>
        </div>
    </div>
    {% else %}
        <div class="box-center">
            <div class="box-v">
                Entry not found. <br>
                <button  hx-get="/book/entry/0/next" hx-target="#page-root">Reset</button>
            </div>
        </div>
    {% endif %}
</div>