{% if reload_browser == True %}
    <div hx-trigger="load" hx-get="/admin/question_manager/browser" hx-target="#question_browser-root"></div>
{% endif %}
<form>
    <div id="question-edit-result"></div>
    <div class="box-v">
        <div class="app_widget-toolbar">
            Question Details
            <div class="spacer-h"></div>
            <button hx-get="/admin/question_manager/editor/{{ question.id }}" hx-target="#question_details-root">Refresh</button>
        </div>
        <table class="editor-table">
            <tr>
                <td>
                    <label for="question-title-input">Title</label>
                </td>
                <td>
                    <input id="question-title-input" name="title" type="text" value="{{ question.title }}">
                </td>
            </tr>
            <tr>
                <td>
                    <label for="question-description-input">Description</label>
                </td>
                <td>
                    <input id="question-description-input" name="description" type="text" value="{{ question.description }}">
                </td>
            </tr>
            <tr>
                <td>
                    <label for="question-short-input">Short</label>
                </td>
                <td>
                    <input id="question-short-input" name="short" type="checkbox" {% if question.short %}checked{% endif %}>
                </td>
            </tr>
        </table>

    </div>
    <div class="box-h basic-spacing">
        <div class="spacer-h"></div>
        <button hx-put="/admin/question_manager/editor/{{ question.id }}" hx-target="#editor">
            Submit
        </button>
    </div>
</form>
