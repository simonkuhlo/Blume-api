{% if previous_entry != None %}
    <div class="flip already_flipped">
        {% with entry = previous_entry %}
            <div class="back" data-entry_id="{{ entry.id }}" id="p{{ entry.id }}b">
                {% include "book/entry_page_back.j2" %}
            </div>
        {% endwith %}
    </div>
{% endif %}

<div class="flip {% if transition == "prev" %} unflipped {% else %} flipped {% endif %}" style="z-index:1;">
    {% with entry = current_entry %}
        <div class="back" data-entry_id="{{ entry.id }}" id="p{{ entry.id }}b">
            {% include "book/entry_page_back.j2" %}
        </div>
    {% endwith %}

    {% with entry = previous_entry %}
        <div class="front" data-entry_id="{{ entry.id }}" id="e{{ entry.id }}f">
        {% if previous_entry != None%}
            {% include "book/entry_page_front.j2" %}
        {% else %}
            {% include "book/book_start_page.j2" %}
        {% endif %}
        </div>
    {% endwith %}
</div>

<div class="flip">
    {% with entry = current_entry %}
        <div class="front" data-entry_id="{{ entry.id }}" id="e{{ entry.id }}f">
            {% include "book/entry_page_front.j2" %}
        </div>
    {% endwith %}
</div>
